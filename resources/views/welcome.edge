    <style>
        /* Estilos para el menú hamburguesa */
        .hamburger-menu {
            position: fixed;
            top: 20px;
            right: 20px;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #333;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 1000;
        }
        
        .hamburger-menu div {
            width: 25px;
            height: 3px;
            background-color: #fff;
            transition: all 0.3s;
        }
        
        .hamburger-menu div:nth-child(2) {
            margin: 5px 0;
        }
        
        .menu {
            position: fixed;
            top: 0;
            right: -250px;
            width: 250px;
            height: 100%;
            background-color: #ff9914f3;
            color: #fff;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            transition: right 0.3s;
        }
        
        .menu a {
            color: #fff;
            text-decoration: none;
            margin: 15px 0;
            font-size: 18px;
        }
        
        .menu.open {
            right: 0;
        }
        
        .hamburger-menu.open div:nth-child(1) {
            transform: translateY(8px) rotate(45deg);
        }
        
        .hamburger-menu.open div:nth-child(2) {
            opacity: 0;
        }
        
        .hamburger-menu.open div:nth-child(3) {
            transform: translateY(-8px) rotate(-45deg);
        }
    </style>
</head>
